<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165px"
        android:layout_height="165px"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/final_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Capsuleup"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="172dp"
        android:background="@drawable/basic_backg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etIp"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="192.168.1.30"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/frame"
            android:backgroundTint="#63988d"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Enter your phone number"
            android:inputType="phone"
            android:minWidth="264sp"
            android:minHeight="64sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginEnd="173dp"
            android:layout_marginRight="173dp"
            android:text="phone number"
            android:textColor="#E6FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.100000024" />

        <EditText
            android:id="@+id/btnSignIn"
            android:focusable="false"
            android:layout_width="264sp"
            android:layout_height="64sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame1"
            android:clickable="true"
            android:ems="10"
            android:freezesText="true"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="none"
            android:onClick="onClick"
            android:text="Sign in"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhone"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/width"
            android:layout_width="340dp"
            android:layout_height="300px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignIn"
            app:layout_constraintVertical_bias="0.38">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                app:backgroundTint="#FFFFFF"
                app:fabCustomSize="300px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:maxImageSize="40sp"
                app:srcCompat="@drawable/client_icon2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnScanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                app:backgroundTint="#63988D"
                app:fabCustomSize="240px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.553"
                app:layout_constraintStart_toEndOf="@+id/btnPrivate"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/scan_icon" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:onClick="onClick"
                app:backgroundTint="#63988D"
                app:barrierAllowsGoneWidgets="false"
                app:chainUseRtl="false"
                app:fabCustomSize="240px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPrivate"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:maxImageSize="40sp"
                app:srcCompat="@drawable/business_icon" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="240dp"
                android:layout_height="10dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:backgroundTint="@color/white"
                android:cropToPadding="true"
                android:fadingEdge="horizontal|vertical"
                android:fitsSystemWindows="false"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@android:drawable/bottom_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="-67dp"
        tools:layout_editor_absoluteY="171dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

